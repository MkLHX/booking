{{ form_start(form,{'attr':{'class':'form'}}) }}
<div class="form-group form-row justify-content-center">
    <div class="col-5">
        {{ form_row(form.tag) }}
    </div>
    <div class="col-5">
        {{ form_row(form.thing) }}
    </div>
</div>
<div class="form-group form-row justify-content-center">
    <div class="col-5">
        {{ form_row(form.start) }}
    </div>
    <div class="col-5">
        {{ form_row(form.end) }}
    </div>
</div>
<div class="form-group form-row justify-content-center">
    <div class="col-10 text-center">
        {{ form_row(form.comment) }}
    </div>
</div>
{{ form_widget(form) }}
<div class="form-group form-row justify-content-center">
    <div class="col-10 text-center">
        <button class="btn btn-outline-dark btn-lg">{{ button_label|default('Save') }}</button>
    </div>
</div>
{{ form_errors(form) }}
{{ form_end(form) }}
