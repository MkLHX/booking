{% extends 'base.html.twig' %}

{% block title %}The best open source scheduler app!{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 py-4 text-center">
            <h1 class="text-center">Welcome to scheduler</h1>
        </div>
        <div class="col-10">
            {% if calendars|length > 0 %}
                {% for calendar in calendars %}
                    <div id="calendar-{{ calendar.id }}" data-calendar-id="{{ calendar.id }}"
                         class="calendar card shadow p-3">
                    </div>
                {% endfor %}
            {% else %}
                <p class="h3">There is no calendars</p>
                {% if is_granted("ROLE_ADMIN") %}
                    <a class="btn btn-dark" href="">Add Calendar ?</a>
                {% endif %}
            {% endif %}
        </div>
    </div>
    <div id="makeBooking" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Clicked Date</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="create-event-form" class="form" action="{{ path('event_new') }}" method="post">
                    <div class="modal-body py-5">
                        <div class="form-group form-row justify-content-center">
                            <div class="col-5">
                                <label for="tag">Tags</label>
                                <select class="custom-select" name="tags" id="tags">
                                    <option selected>Choose tag to filter...</option>
                                </select>
                            </div>
                            <div class="col-5">
                                <label for="thing">Things</label>
                                <select class="custom-select" id="things" name="things">
                                    <option selected>Choose thing you want book...</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group form-row justify-content-center">
                            <div class="col-5">
                                <label for="start">Start</label>
                                <input class="form-control" type="date" name="start" value="">
                            </div>
                            <div class="col-5">
                                <label for="end">End</label>
                                <input class="form-control" type="date" name="end" value="">
                            </div>
                        </div>
                        <div class="form-group form-row justify-content-center">
                            <div class="col-10 text-center">
                                <label for="comment">Comment</label>
                                <br>
                                <textarea class="comment form-control w-100 h-100" name="comment"
                                          placeholder="Let us know what you want"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" name="submit" class="btn btn-primary">Book it</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
