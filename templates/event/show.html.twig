{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>DateStart</th>
            <td>{{ event.start ? event.start|localizeddate('medium','short') : '' }}</td>
        </tr>
        <tr>
            <th>DateEnd</th>
            <td>{{ event.end ? event.end|localizeddate('medium','short') : '' }}</td>
        </tr>
        <tr>
            <th>Comment</th>
            <td>{{ event.comment }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
